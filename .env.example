# CSFloat Outbid Bot Configuration
# Copy this file to .env and update the values

# ===================
# Server Settings
# ===================
HOST=0.0.0.0
PORT=8000

# ===================
# Database Settings
# ===================
# SQLite (default)
DATABASE_URL=sqlite+aiosqlite:///./bot.db
# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/csfloat_bot

# ===================
# Bot Settings
# ===================
# How often to check for competing orders (in seconds)
CHECK_INTERVAL=120

# How much to outbid competitor's price (in dollars)
OUTBID_STEP=0.01

# Maximum number of outbids per order before stopping
MAX_OUTBIDS=10

# ===================
# Authentication (JWT)
# ===================
# IMPORTANT: Change this to a random string in production!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-super-secret-key-change-in-production-123

# JWT token algorithm (don't change unless you know what you're doing)
JWT_ALGORITHM=HS256

# JWT token expiration time in minutes (1440 = 24 hours)
JWT_EXPIRE_MINUTES=1440

# Allow new user registration (set to false to disable)
ALLOW_REGISTRATION=true

# ===================
# Rate Limiting
# ===================
# Global API rate limit (requests per minute)
MAX_REQUESTS_PER_MINUTE=60

# Per-account CSFloat API rate limit (requests per minute)
MAX_REQUESTS_PER_ACCOUNT=30

# ===================
# Admin Panel
# ===================
# Enable admin panel (set to false for shared/production deployments)
# When disabled, /admin and /api/admin/* return 404
ADMIN_ENABLED=true

# ===================
# Logging
# ===================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
